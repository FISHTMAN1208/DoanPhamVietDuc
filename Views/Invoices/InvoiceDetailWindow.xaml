<Window x:Class="DoanPhamVietDuc.Views.Invoices.InvoiceDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Chi tiết hóa đơn" 
        Height="auto" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        Background="#F8FAFC">

    <Window.Resources>
        <!-- Primary Gradient -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E293B" Offset="0"/>
            <GradientStop Color="#764BA2" Offset="1"/>
        </LinearGradientBrush>

        <!-- GroupBox Style -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header với gradient -->
                            <Border Grid.Row="0" 
                                    Background="{StaticResource PrimaryGradient}" 
                                    CornerRadius="8,8,0,0"
                                    Padding="16,12">
                                <DockPanel>
                                    <ContentPresenter ContentSource="Header" 
                                                      TextElement.FontWeight="Bold"
                                                      TextElement.FontSize="16"
                                                      TextElement.Foreground="White"
                                                      VerticalAlignment="Center"/>
                                </DockPanel>
                            </Border>

                            <!-- Content area -->
                            <Border Grid.Row="1" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="0,0,8,8"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#00000020" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                </Border.Effect>
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBlock Style -->
        <Style x:Key="ModernInfoTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="ModernCloseButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#DC2626"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B91C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header với gradient -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGradient}" Padding="20,16" Margin="0,0,0,24" CornerRadius="12">
            <DockPanel LastChildFill="True">
                <materialDesign:PackIcon Kind="FileDocument" Width="40" Height="40" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Text="CHI TIẾT HÓA ĐƠN" FontSize="20" FontWeight="Bold" Foreground="White" Margin="12,0,0,0" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- Thông tin hóa đơn -->
        <GroupBox Grid.Row="1" Header="Thông tin hóa đơn" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,24">
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Cột 1 -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text="Mã hóa đơn:" FontWeight="Medium" Foreground="#374151"/>
                    <TextBlock Text="{Binding InvoiceID}" Style="{StaticResource ModernInfoTextBlock}"/>

                    <TextBlock Text="Mã hiển thị:" FontWeight="Medium" Foreground="#374151" Margin="0,15,0,0"/>
                    <TextBlock Text="{Binding InvoiceID}" Style="{StaticResource ModernInfoTextBlock}"/>

                    <TextBlock Text="Tên khách hàng:" FontWeight="Medium" Foreground="#374151" Margin="0,15,0,0"/>
                    <TextBlock Text="{Binding CustomerName}" Style="{StaticResource ModernInfoTextBlock}"/>
                </StackPanel>

                <!-- Cột 2 -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,15,0">
                    <TextBlock Text="Phương thức thanh toán:" FontWeight="Medium" Foreground="#374151"/>
                    <TextBlock Text="{Binding PaymentMethod}" Style="{StaticResource ModernInfoTextBlock}"/>

                    <TextBlock Text="Trạng thái:"/>
                    <TextBlock Text="{Binding ImportStatus}" Margin="0,5,0,0" FontWeight="SemiBold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ImportStatus}" Value="Hoàn thành">
                                        <Setter Property="Foreground" Value="#10B981" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ImportStatus}" Value="Đang xử lý">
                                        <Setter Property="Foreground" Value="#F59E0B" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ImportStatus}" Value="Hủy bỏ">
                                        <Setter Property="Foreground" Value="#EF4444" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>


                    <TextBlock Text="Số điện thoại:" FontWeight="Medium" Foreground="#374151" Margin="0,15,0,0"/>
                    <TextBlock Text="{Binding CustomerPhone}" Style="{StaticResource ModernInfoTextBlock}"/>
                </StackPanel>

                <!-- Cột 3 -->
                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="Nhân viên tạo:" FontWeight="Medium" Foreground="#374151"/>
                    <TextBlock Text="{Binding CreateBy}" Style="{StaticResource ModernInfoTextBlock}"/>

                    <TextBlock Text="Thời gian tạo:" FontWeight="Medium" Foreground="#374151" Margin="0,15,0,0"/>
                    <TextBlock Text="{Binding CreateTime, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Style="{StaticResource ModernInfoTextBlock}"/>

                    <TextBlock Text="Mã nhân viên:" FontWeight="Medium" Foreground="#374151" Margin="0,15,0,0"/>
                    <TextBlock Text="{Binding Staff.StaffID}" Style="{StaticResource ModernInfoTextBlock}"/>
                </StackPanel>

                <!-- Ghi chú -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0">
                    <TextBlock Text="Ghi chú:" FontWeight="Medium" Foreground="#374151"/>
                    <Border Background="White" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,5,0,0">
                        <TextBlock Text="{Binding Notes}" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Chi tiết hóa đơn -->
        <GroupBox Grid.Row="2" Header="Danh sách sản phẩm" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,24">
            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0" 
                          ItemsSource="{Binding InvoiceDetails}" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True" 
                          Style="{StaticResource MaterialDesignDataGrid}"
                          CanUserAddRows="False"
                          VerticalScrollBarVisibility="Auto"
                          materialDesign:DataGridAssist.CellPadding="8"
                          Background="White"
                          MinHeight="200"
                          BorderBrush="#E2E8F0"
                          BorderThickness="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="STT" Width="80">
                            <DataGridTextColumn.Binding>
                                <Binding RelativeSource="{RelativeSource AncestorType=DataGridRow}"
                                         Converter="{StaticResource IndexConverter}" />
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Sách" Binding="{Binding Book.Title}" Width="*"/>
                        <DataGridTextColumn Header="Mã ISBN" Binding="{Binding Book.ISBNCode}" Width="180"/>
                        <DataGridTextColumn Header="Tác giả" Binding="{Binding Book.Author}" Width="160"/>
                        <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="120"/>

                        <DataGridTextColumn Header="Đơn giá" Width="120">
                            <DataGridTextColumn.Binding>
                                <Binding Path="UnitPrice" StringFormat="{}{0:N0} VNĐ" />
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Thành tiền" Width="130">
                            <DataGridTextColumn.Binding>
                                <Binding Path="Subtotal" StringFormat="{}{0:N0} VNĐ" />
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Footer - Tổng tiền và nút Đóng -->
        <Grid Grid.Row="3" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Tổng tiền -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="💰 Tổng tiền:" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"
                           Foreground="#374151"/>
                <Border Background="#F1F5F9" 
                        Padding="20,12" 
                        CornerRadius="8" 
                        MinWidth="200">
                    <Border.Effect>
                        <DropShadowEffect Color="#00000020" BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                    </Border.Effect>
                    <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:N0} VNĐ'}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Left"
                               Foreground="White"/>
                </Border>
            </StackPanel>

            <!-- Nút Đóng -->
            <Button Grid.Column="1"
                    Content="❌ Đóng"
                    Command="{Binding CloseCommand}"
                    Style="{StaticResource ModernCloseButton}"
                    Width="120" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>